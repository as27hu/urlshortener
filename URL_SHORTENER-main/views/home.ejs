<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Url Shortener</title>
</head>
<body data-bs-theme="dark">
    <div class="container" data-bs-theme="dark">
    <h1 class=" mt-3">URL SHORTENER</h1>
    <form method="post" action="/url">
        <div class=" mt-5 " >
          <label for="exampleInputEmail1" class="form-label">Enter your url here</label>
          <input type="test" class="form-control" placeholder="http://www.example.com" name="url" >
          <div  class="form-text">We'll never share your link with anyone else.</div>
        </div>
       
        <button type="submit" class="btn btn-primary mt-3">Submit</button>
      </form>
      <div class="mt-3"><% if (locals.shortID) { %>
       <p>Url generated : http://localhost:8001/url/<%= shortID %></p>
      <% } %></div>

      <% if (locals.urls) { %>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">S.no</th>
                <th scope="col">Short_Id</th>
                <th scope="col">Redirect_Url</th>
                <th scope="col">Clicks</th>
              </tr>
            </thead>
            <tbody>
              <% urls.forEach((url,index) => { %>
                <tr>
                    <td><%= index+1 %></td>
                    <td><%=url.shortId  %></td>
                    <td><%=url.redirectUrl  %></td>
                    <td><%=url.visitHistory.length  %></td>
                  </tr>
              <% }) %>
            </tbody>
          </table>
      <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>